{
  "manifest_version": 3,
  "name": "Redipost - Smart Reddit Assistant",
  "version": "1.1.0",
  "description": "AI-powered Reddit post assistant that finds perfect subreddits, optimizes your content, and ensures rule compliance for maximum engagement.",
  "author": "Redipost Team",
  
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://www.reddit.com/*",
    "https://fonts.googleapis.com/*",
    "https://openrouter.ai/*"
  ],
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "action": {
    "default_title": "Open Redipost Assistant",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; connect-src 'self' https://www.reddit.com https://openrouter.ai;"
  },
  
  "commands": {
    "open-redipost": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Open Redipost Assistant"
    }
  }
}